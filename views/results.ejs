<%- include('partials/header') %>
<div class="container-fluid">
	<div class="row">
		<div class="col-md-12 p-n5">
			<h1>Search Result Page</h1>
		</div>	
	</div>	
</div>
<div class="container">
	<div class="row">
		<% data["Search"].forEach((movie)=>{ %>
			<div class="col-md-6 col-lg-3">
				<div class="card">
					<img class="card-img-top" src="<%if(movie['Poster'] == 'N/A'){%><%= movie['Poster'] %><%}else{%><%= movie['Poster'] %><%}%>" alt="<%= movie['Title'] %>.jpg">
					<div class="card-body text-dark">
						<h4 class="title"><%= movie['Title'] %> <span class="year"><h5>(<%= movie['Year'] %>)</h5></span></h4>
						<p>
							<a href="" class = "btn btn-primary"> More Info</a>
						</p>
					</div>
				</div>
			</div>
		<% }) %>
		

	</div>
</div>


<% if(!title){ %>
<ul>
	<% data["Search"].forEach((movie)=>{ %>
		<li>
			<strong>
				<%= movie.Title %>
			</strong>
			 - <%= movie["Year"] %>
			 <span><img src="<%= movie['Poster'] %>" style="width:30px" ></span>
			 <span><a href="/search/<%= movie['imdbID']%>">ImdbID - <%= movie["imdbID"] %></a></span>
			 <span>Type - <%= movie.Type %></span>
		</li>
    <% }) %>
</ul>

<h3><%= data.totalResults %></h3>
<h3><%= data.Response %></h3>
<% }else if(title){ %>
	<ul>
		<% for(let key in data){ %>
			<li><% if(key == "Ratings"){ %><strong><%= key %></strong>
				<ul>
					<% data[key].forEach((rating)=>{ %>
						<li>
						<% for(let x in rating){ %>
								<strong><%= x %></strong> - <%= rating[x] %>	
						<%} %>		
						</li>				
					<%}) %>
				</ul>
			<% }else{ %>
				<strong><%= key %></strong> - <%= data[key] %>
			<% } %>
			</li>
		<% } %>
	</ul>
<% } %>
 

 

<a href="/">Search Again!!</a>